package interaction.game;

public class Archer {
	private int hp;
	private int ap;
	private int dp;
	private int mp;
	private int level;
	private int exp;
	
	public Archer() {
		this.hp=20;
		this.ap=15;
		this.dp = 20;
		this.mp = 25;
		this.level = 1;
		this.exp = 0;
	}
	
	
	public void huntMonster1() {
		System.out.println("궁수가 몬스터 사냥을 시작합니다.");
		hp = hp -2;
		exp = exp+10;
	}
	
	public void getAlldata() {
		System.out.println("체력 : " + hp);
		System.out.println("공격력 : " + ap);
		System.out.println("방어력 : " + dp);
		System.out.println("마나 : " + mp);
		System.out.println("레벨: " + level);
		System.out.println("경험치 : " + exp);
	}
	
	
}
