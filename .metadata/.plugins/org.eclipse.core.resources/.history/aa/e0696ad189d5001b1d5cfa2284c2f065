package polymorphism.game;

public class Zombie extends Monster{
		
	private int level;
	private int hp;
	private int dp;
	
	public Zombie() {
		super("좀비",20,1,3);
		this.level = level;
	}
	
	public void showZombie() {
		super.showMonster();
		System.out.println("레벨 : " + level);
	}

	public void doBattle(int ap) {
		this.hp = (this.hp + this.dp) - ap;
		if(this.hp <= 0) {
			System.out.println("이 좀비는 이미 죽었습니다.");
		}
		
	}

	public int getAtk() {
		return this.getAp();
	}
	
	public int getHp() {
		return this.hp;
	}
	public void showStatus() {
		System.out.println("체력 :" + hp);
		System.out.println("공격력 :" + getAp());
		System.out.println("방어력 :" + dp);
	}
	
}
