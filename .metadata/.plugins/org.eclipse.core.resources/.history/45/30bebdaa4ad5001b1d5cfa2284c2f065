package interaction.game;

public class Orc {
	public int hp;
	public int ap;
	public int dp;
	
	public Orc() {
		hp = 20;
		ap = 5;
		dp = 10;
	}
	public void Attack(Archer a1) {
		System.out.println("몬스터가 공격을 당했습니다.");
		hp = hp -5;
		dp = dp -3;
		
	}
	public void getAlldata() {
		System.out.println("체력 :" + hp);
		System.out.println("공격력 :" + ap);
		System.out.println("방어력 :" + dp);
	}
}
