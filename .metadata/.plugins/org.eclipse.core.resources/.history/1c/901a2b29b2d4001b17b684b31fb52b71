package buyandsell;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Buyer b1 = new Buyer(1000);
		b1.showBuyer();
		b1.buyMango(3);
		b1.showBuyer();
		b1.buyMango(1);
		b1.showBuyer();
		
		Seller b2 = new Seller(20);
		b2.sellMango(100);
		b2.showSeller();
		b2.sellMango(15);
		b2.showSeller();
	}

}
