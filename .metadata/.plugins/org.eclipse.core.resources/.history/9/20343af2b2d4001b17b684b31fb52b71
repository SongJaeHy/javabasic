package buyandsell;

public class Main2 {

	public static void main(String[] args) {
		// 상인 2개 만들기
		Buyer b1 = new Buyer(10);
		Buyer b2 = new Buyer(20);
		
		// 구매자 1개 만들기
		Seller s1 = new Seller(15000);
		// 구매자 정보 확인
		s1.showSeller();
		// 1번상인 정보 확인
		b1.showBuyer();
		// 2번상인 정보 확인
		b2.showBuyer();
		// 1번 상인에게 구매자가 망고 구매
		b1.buyMango(s1, 100);
		// 구매자 정보 확인
		s1.showSeller();
		// 1번상인 정보 확인
		b1.showBuyer();
		// 2번상인 정보 확인
		b2.showBuyer();
	}

}
