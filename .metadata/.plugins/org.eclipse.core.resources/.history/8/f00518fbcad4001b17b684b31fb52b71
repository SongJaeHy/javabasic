package interaction.game;

public class Monster2 {
	private int hp;
	private int ap;
	private int dp;
	
	public Monster2() {
		this.hp = 10;
		this.ap = 3;
		this.dp = 5;
	}
	public void Attack(Magician a2) {
		System.out.println("공격을 당해서 반격합니다.");
		hp = hp-2;
		ap = ap-2;
	}
	public void getAlldata() {
		System.out.println("체력 :" + hp);
		System.out.println("공격력 :" + ap);
		System.out.println("방어력 :" + dp);
	}
}
