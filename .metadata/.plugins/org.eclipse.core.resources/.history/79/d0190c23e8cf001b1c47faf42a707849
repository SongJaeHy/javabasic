import java.util.Scanner;

public class Break4 {

	public static void main(String[] args) {
		// Scanner로 정수를 입력받으세요.
		// 1~n까지 차곡차곡 순서대로 더해나갔을때
		// 1부터 몇까지 더해야 입력된 정수르 초과하는지 계산
		
		Scanner scan = new Scanner(System.in);
		System.out.println("수의 총 합이 몇 이상이 되면 종료하시겠습니까?");
		int total = scan.nextInt();
		int count = 0;
		while(count < total) {
			count += 1;
			System.out.println("총합은" + count + "입니다.");
			System.out.println("목표값 :" + total);
			System.out.println("총 합 :" + count);
			System.out.println("몇 까지 더했나? :" + total);
			
		}
	scan.close();
	}
}
