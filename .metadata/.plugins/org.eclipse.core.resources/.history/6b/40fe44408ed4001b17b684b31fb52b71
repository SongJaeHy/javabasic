package accessmodifier.game;

public class Commoner {
	private int hp = 1;
	private int mana= 20;
	private int level= 1;
	private int exp= 10;
	
	public Commoner() {
		this.hp = 20;
		this.mana = 10;
		this.level = 1;
		this.exp = 10;
	}
	
	
	public void getter() {
		System.out.println("체력 : " + hp);
		System.out.println("마나 : " + mana);
		System.out.println("레벨 : " + level);
		System.out.println("경험치 : " + exp);
	}
	public void setMp(int mana) {
		this.mana = mana;
	}
	public int getMp() {
		return mana;
	}

}
