package interaction.game;

public class Trole {
	private int hp;
	private int ap;
	private int dp;
	
	public Trole() {
		this.hp = 20;
		this.ap = 6;
		this.dp = 5;
	}
	
	public int getHp() {
		return hp;
	}

	public void setHp(int hp) {
		this.hp = hp;
	}

	public int getAp() {
		return ap;
	}

	public void setAp(int ap) {
		this.ap = ap;
	}

	public int getDp() {
		return dp;
	}

	public void setDp(int dp) {
		this.dp = dp;
	}

	public Trole(Warrior a3) {
		System.out.println("공격을 당했습니다.");
		hp = (getHp()-5);
		dp = (getDp()-3);
	}
	public void getAlldata() {
		System.out.println("체력 :" + hp);
		System.out.println("공격력 :" + ap);
		System.out.println("방어력 :" + dp);
	}
}
