package interaction.game;

public class Main {

	public static void main(String[] args) {
		Warrior w1 = new Warrior();
		Orc o1 = new Orc();
		Trole t1 = new Trole();
		Ogresse o2 = new Ogresse();
		w1.huntOrc(o1);
		w1.huntOrc(o1);
		w1.huntOrc(o1);
		w1.huntOrc(o1);
		w1.showStatus();
		w1.huntTrole(t1);
		w1.huntTrole(t1);
		w1.huntTrole(t1);
		w1.huntTrole(t1);
		w1.showStatus();
		w1.huntOgresse(o2);
		w1.huntOgresse(o2);
		w1.huntOgresse(o2);
		w1.huntOgresse(o2);
		w1.showStatus();

	}

}
