package polymorphism.game;

public class Monster {
	private int hp;
	private int ap;
	private int dp;
	
	public Monster(int hp, int dp) {
		this.hp = 5;
		this.ap = 3;
		this.dp = 0;
	}

	public int getHp() {
		return hp;
	}

	public void setHp(int hp) {
		this.hp = hp;
	}

	public int getAp() {
		return ap;
	}

	public void setAp(int ap) {
		this.ap = ap;
	}

	public int getDp() {
		return dp;
	}

	public void setDp(int dp) {
		this.dp = dp;
	}
	
	
}
