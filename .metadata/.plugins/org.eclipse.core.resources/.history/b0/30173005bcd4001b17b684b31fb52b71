package buyandsell;

public class Main2 {

	public static void main(String[] args) {
		// 상인 2개 만들기
		Seller s1 = new Seller(1);
		Seller s2 = new Seller(1);
		Seller s3 = new Seller(2);
		// 구매자 1개 만들기
		Buyer b2 = new Buyer(5000);
		Buyer b3 = new Buyer(10000);
		// 구매자 정보 확인
		b2.showBuyer();
		// 1번상인 정보 확인
		s1.showSeller();
		// 2번상인 정보 확인
		s2.showSeller();
		// 1번 상인에게 구매자가 망고 구매
		b2.buyMango(s3, 10, 20);
		// 구매자 정보 확인
		b2.showBuyer();
		// 1번상인 정보 확인
		s1.showSeller();
		// 2번상인 정보 확인
		s2.showSeller();
	}

}
