package interaction.game;

public class Magician {
	private int hp;
	private int ap;
	private int dp;
	private int mp;
	private int level;
	private int exp;
	
	public Magician() {
		this.hp = 30;
		this.ap = 10;
		this.dp = 30;
		this.mp = 20;
		this.level = 1;
		this.exp = 0;
	}
	public void hunt(Slame monster2, int c) {
		System.out.println("마법사가 몬스터 사냥을 시작합니다.");
		hp = hp -2;
		exp = exp + 15;
	}
	public void getAlldata() {
		System.out.println("체력 : " + hp);
		System.out.println("공격력 : " + ap);
		System.out.println("방어력 : " + dp);
		System.out.println("마나 : " + mp);
		System.out.println("레벨: " + level);
		System.out.println("경험치 : " + exp);
		System.out.println("-------------");
	}
	public void huntMonster2() {
		System.out.println("사냥합니다.");
		hp = hp -2;
		exp = exp +10;
		
	}
	
}
